<%- include("../partials/head.ejs") %>
<body class="login__body"></body>
<%- include("../partials/header.ejs") %>
<main class="login__body__main">
    <form action="/users/login" method="post" class="login__body__main__form">
        <h2>Inicie sesion</h2>
        <div class="login__body__main__form__container">
            <label for="email">Ingrese su correo o usuario</label>
            <input type="text" name="email"></div>
        <div class="login__body__main__form__container">
            <label for="password">Ingrese su contrase√±a</label>
            <input type="password" name="password"></div>
        <div class="login__body__main__form__container__buttons">
            <button type="reset" id="reset">Borrar</button>
            <button type="submit" id="submit">Login</button>
            <% if (locals.errores) { %>
                <% errores.forEach(error => {%>
                <p> <%= error.msg %> </p> 
            <% })} %>
        </div>
        <div>
            <label for="remember">Mantener sesion</label>
            <input type="checkbox" name="remember" value="true">
        </div>
    </form>
    <h5>No posees cuenta? <a href="/users/register">Registrarse</a></h5>
</main>
<%- include("../partials/footer.ejs") %>
</body>
</html>