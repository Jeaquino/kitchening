<header class="header">
    <div class="container-icons">
      <a href="/products/cart">
        <i class="fa-solid fa-cart-shopping"></i>
      </a>
      <% if(locals.usuario){%>
          <img src="/images/users/<%= usuario.image %>" alt="foto de perfil" id="image-profile">
          <div id="user-name">
            <ul>
              <li id="user-name"><%= usuario.name %></li>
              <li><a class="user-menu" href="/users/profile/<%=usuario.id%>">Profile</a></li>
              <li><a class="user-menu" href="/users/logout">Cerrar sesion</a></li>
            </ul>
        </div>

      <% }else{ %>
      <a href="/users/login">
        <i class="fa-solid fa-user"></i>
      </a>
      <% } %>
      <% if(locals.usuario && usuario.rol == 'admin'){%>
      <a href="/products/dashboard">
        <i class="fa-solid fa-gear"></i>
      </a>
      <a href="/users/dashboard">
        <i style="color:red" class="fa-solid fa-gear"></i>
      </a>
      <% } %>
    </div>
    <img src="/images/logo.jpg" alt="Imagen del logo" id="header__logo" />
    <div>
      <a href="#" class="header__bars">
          <span class="fa fa-bars"></span>
        </a>    
    </div>
    <nav class="header__nav">
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="#">Quienes</a></li>
        <li><a href="#">Servicios</a></li>
        <li><a href="#">Portfolio</a></li>
        <li><a href="#">Sucursales</a></li>
        <li><a href="#">Contacto</a></li>
      </ul>
    </nav>
  </header>